<h1>Listing bills</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Occurance</th>
    <th>Amount</th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%=h bill.name %></td>
    <td><%=h bill.occurance %></td>
    <td><%=h bill.amount %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New bill', new_bill_path %>